<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.djlewis.monetflash.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/holo_blue_dark"
    android:id="@+id/linearLayout"
    android:padding="@dimen/design_appbar_elevation">

        <LinearLayout
            android:id="@+id/displayLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/inputEdittext"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phoneEditText"
                android:background="@color/bright_foreground_disabled_material_dark"
                android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:hint="@string/phonehint"
                android:enabled="false"
                android:phoneNumber="true"
                android:maxLength="12"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/inputEdittext"
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/amountEditText"
                android:background="@color/bright_foreground_disabled_material_dark"
                android:layout_marginBottom="@dimen/abc_action_bar_subtitle_bottom_margin_material"
                android:hint="@string/amounttopayhint"
                android:enabled="false"
                android:maxLength="6"
                android:focusable="true"
                android:focusableInTouchMode="true" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/buttonpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_iconResource="@drawable/ic_flashpay"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="30dp"
                fancy:fb_text="@string/pay"
                fancy:fb_textColor="#FFFFFF"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:divider="#000"
            android:dividerPadding="1dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:layout_margin="@dimen/design_fab_elevation"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonOne" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonTwo"
                android:layout_margin="@dimen/design_fab_elevation" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonThree"
                android:layout_margin="@dimen/design_fab_elevation" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonNext"
                android:layout_margin="@dimen/design_fab_elevation"
                android:background="@drawable/next" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:divider="#000"
            android:dividerPadding="1dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:layout_margin="@dimen/design_fab_elevation"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonFour" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonFive"
                android:layout_margin="@dimen/design_fab_elevation" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonSix"
                android:layout_margin="@dimen/design_fab_elevation" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:layout_margin="@dimen/design_fab_elevation"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonZero" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:divider="#000"
            android:dividerPadding="1dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:layout_margin="@dimen/design_fab_elevation"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonSeven" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonEight"
                android:layout_margin="@dimen/design_fab_elevation" />
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_button"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonNine"
                android:layout_margin="@dimen/design_fab_elevation" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/buttonCancel"
                android:layout_margin="@dimen/design_fab_elevation"
                android:background="@drawable/backspace" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:divider="#000"
            android:dividerPadding="1dp">

        </LinearLayout>

    </LinearLayout>